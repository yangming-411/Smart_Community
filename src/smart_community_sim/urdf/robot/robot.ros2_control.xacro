<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- 定义 ros2_control 配置的宏 -->
  <xacro:macro name="robot_ros2_control">
    <!-- 声明一个名为“RotbotGazeboSystem”的ros2_control系统 -->
    <ros2_control name="RobotGazeboSystem" type="system">
      <!-- 指定硬件插件，用于连接Gazebo仿真 -->
      <hardware>
        <plugin>gazebo_ros2_control/GazeboSystem</plugin>
      </hardware>

      <!-- 配置左轮关节的接口 -->
      <joint name="left_wheel_joint">
        <!-- 定义速度命令接口，并设置其上下限 -->
        <command_interface name="velocity">
          <param name="min">-1</param>
          <param name="max">1</param>
        </command_interface>
        <!-- 定义力/力矩命令接口，并设置其上下限 -->
        <command_interface name="effort">
          <param name="min">-0.1</param>
          <param name="max">0.1</param>
        </command_interface>
        <!-- 注意：左轮关节未定义状态接口，可能是个疏忽或有意为之 -->
      </joint>

      <!-- 配置右轮关节的接口 -->
      <joint name="right_wheel_joint">
        <!-- 定义速度命令接口，并设置其上下限（与左轮相同） -->
        <command_interface name="velocity">
          <param name="min">-1</param>
          <param name="max">1</param>
        </command_interface>
        <!-- 定义力/力矩命令接口，并设置其上下限（与左轮相同） -->
        <command_interface name="effort">
          <param name="min">-0.1</param>
          <param name="max">0.1</param>
        </command_interface>
        <!-- 定义完整的状态反馈接口 -->
        <state_interface name="position" />
        <state_interface name="velocity" />
        <state_interface name="effort" />
      </joint>
    </ros2_control>

    <gazebo>
        <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
            <parameters>$(find smart_community_sim)/config/robot_ros2_controller.yaml</parameters>
        </plugin>
    </gazebo>

  </xacro:macro>
</robot>
