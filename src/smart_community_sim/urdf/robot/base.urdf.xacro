<?xml version="1.0"?>
<robot xmlns:xacro="http://wwww.ros.org/wiki/xacro" >
    <xacro:include filename="$(find smart_community_sim)/urdf/robot/common_inertia.xacro"/>

    <xacro:macro name="base_xacro" >
        <link name="base_footprint"/>

        <!--机器人的身体部分-->
        <link name="base_link">
            <!--部件的外观描述-->
            <visual>
                <!--沿着自己几何中心的偏移和旋转量-->
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <!--几何形状-->
                <geometry>
                    <!-- 定义一个长方体：长(x) 宽(y) 高(z)，单位：米 -->
                    <box size="0.34 0.24 0.14"/>
                </geometry>
                <!--材质颜色-->
                <material name="white">
                    <color rgba="1.0 1.0 1.0 0.5"/>
                </material>
            </visual>

            <collision>
                <!--沿着自己几何中心的偏移和旋转量-->
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <!--几何形状-->
                <geometry>
                    <!-- 定义一个长方体：长(x) 宽(y) 高(z)，单位：米 -->
                    <box size="0.34 0.24 0.14"/>
                </geometry>
                <!--材质颜色-->
                <material name="white">
                    <color rgba="1.0 1.0 1.0 0.5"/>
                </material>
            </collision>

            <!--添加质量与惯性-->
            <xacro:box_inertia m="3.0" w="0.34" h="0.24" d="0.14"/>
            
        </link>

        <joint name="joint_name" type="fixed">
            <origin xyz="0.0 0.0 0.119" rpy="0.0 0.0 0.0"/>
            <parent link="base_footprint"/>
            <child link="base_link"/>
        </joint>

        <!-- 基座 - 大地之稳（中性灰，中庸之基） -->
        <gazebo reference="base_link">
            <material>Gazebo/Gray</material>  <!-- 或 Gazebo/DarkGray -->
        </gazebo>



    </xacro:macro>
    

</robot>
